generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  SUPERADMIN
  ADMIN
  USER
}

enum SubType {
  FREE
  PREMIUM
}

model Users {
  id        String   @id @default(uuid())
  username  String   @unique
  email     String   @unique
  password  String
  role      Role     @default(USER)
  awatarUrl String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  profile   Profile?
}

model Profile {
  id        String   @id @default(uuid())
  userId    String   @unique
  fullName  String
  phone     String
  country   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user Users @relation(fields: [userId], references: [id])
}

model Movies {
  id               String   @id @default(uuid())
  title            String
  slug             String   @unique
  description      String?
  release_year     Int
  durationMinuts   Int
  posterUrl        String
  rating           Decimal  @db.Decimal(2, 1)
  subscriptionType SubType  @default(FREE)
  viewCount        Int      @default(0)
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  movieCategories MovieCategories[]
}

model Categories {
  id          String   @id @default(uuid())
  name        String
  slug        String
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  CategoryMovies MovieCategories[]
}

model MovieCategories {
  id          String   @id @default(uuid())
  movieId    String 
  categoryId String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  movie Movies @relation(fields: [movieId], references: [id])
  category Categories @relation(fields: [categoryId], references: [id])
}
